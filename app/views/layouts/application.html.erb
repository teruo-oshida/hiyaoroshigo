<!DOCTYPE html>
<% profile = yield :profile %>
<% title = yield :title %>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>しまねＩＴコミュニティ交流会2016</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    '/slick/slick', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    '/slick/slick-theme', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    '/jquery-bar-rating/themes/fontawesome-stars', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '/slick/slick.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '/jquery-bar-rating/jquery.barrating.min.js', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?v=3&key=AIzaSyBTct2XgaS6_8i7eyuNww9k_3YhlVEz9Vw"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

    <% for size in [16, 24, 32, 48, 64] %>
      <%= favicon_link_tag("favicon-#{size}px.png",
                           { sizes: "#{size}x#{size}", type: "image/png" }) %>
    <% end %>
    <%= favicon_link_tag("home-icon.png",rel:"apple-touch-icon-precomposed") %>
    <meta name="viewport" content="width=device-width">
    <meta name="robots" content="noindex,nofollow">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="ひやおろしGO">
  </head>

  <body>
  <div class="l_wrap">

      <%= render partial: "shared/header", locals: {profile: profile, title: title} %>
      <div class="l_contents <%= 'l_contents_no-footer' if profile.present? %>">
        <%= yield %>
      </div>
      <%= render partial: "shared/footer" if profile.blank? %>
    </div>
  </body>
</html>
